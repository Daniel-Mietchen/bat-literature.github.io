untries.", "access_right": "restricted", "creators": [{"name": "Pham, Long Kim", "affiliation": null}, {"name": "Tran, Bang Van", "affiliation": null}, {"name": "Le, Quy Tan", "affiliation": null}, {"name": "Nguyen, Trung Thanh", "affiliation": null}, {"name": "Voigt, Christian C.", "affiliation": null}], "keywords": ["Biodiversity", "Mammalia", "Chiroptera", "Chordata", "Animalia", "bats", "bat"], "related_identifiers": [{"identifier": "hash://md5/be4c852a172f44caa6cb7ac53cb0d722", "relation": "hasVersion", "scheme": "url"}, {"identifier": "hash://sha256/cb5624082b76ff654984afaa3af3621225c99943f849786819da8edb31317f30", "relation": "hasVersion", "scheme": "url"}, {"identifier": "zotero://select/groups/5435545/items/56FJHRFT", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://zotero.org/groups/5435545/items/56FJHRFT", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "https://linker.bio/cut:hash://md5/e887038d06d772e46eb92f8fc49510da!/b138445-140903", "relation": "isDerivedFrom", "scheme": "url"}, {"identifier": "hash://md5/26f7ce5dd404e33c6570edd4ba250d20", "relation": "isPartOf", "scheme": "url"}, {"identifier": "10.5281/zenodo.1410543", "relation": "isCompiledBy", "resource_type": "software", "scheme": "doi"}], "custom": {"dwc:class": ["Mammalia"], "dwc:kingdom": ["Animalia"], "dwc:order": ["Chiroptera"], "dwc:phylum": ["Chordata"]}, "resource_type": {"title": "Journal article", "type": "publication", "subtype": "article"}, "journal": {"issue": "1", "pages": "18", "title": "Diversity", "volume": "13"}, "alternate_identifiers": [{"identifier": "hash://md5/be4c852a172f44caa6cb7ac53cb0d722"}, {"identifier": "urn:lsid:zotero.org:groups:5435545:items:56FJHRFT"}, {"identifier": "10.3390/d13010018"}], "communities": [{"id": "biosyslit"}, {"id": "batlit"}], "relations": {"version": [{"index": 0, "is_last": true, "parent": {"pid_type": "recid", "pid_value": "13436008"}}]}}, "title": "Description of Echolocation Call Parameters for Urban Ba